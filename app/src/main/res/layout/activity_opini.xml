<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8d230f"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/o"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Comment"
        android:gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:padding="5dp"
        android:stretchColumns="1">

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:src="@drawable/alif" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Alif Himawan ::  Museum ini pertama di Indonesia "
                android:textSize="10dp"
                android:textStyle="normal"

                />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:src="@drawable/alfa" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="56dp"
                android:gravity="left"
                android:text="Bulgisfii Alfa : Museum ini sangatlah bermanfaat."
                android:textSize="10dp"
                android:textStyle="normal"

                />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:src="@drawable/wayan" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="70dp"
                android:gravity="left"
                android:text="I Wayan : Museum ini Mantab Jiwa"
                android:textSize="10dp"
                android:textStyle="normal"

                />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:src="@drawable/rufii" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Ma'rufi Suaidah : Museum ini memiliki nilai seni tinggi"
                android:textSize="10dp"
                android:textStyle="normal"

                />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:src="@drawable/pringgo" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="150sp"
                android:gravity="left"
                android:text="Muhammad Pringgo : Museum ini sepi tapi cocok untuk penikmat musik"
                android:textSize="10dp"
                android:textStyle="normal"

                />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="Home"
                android:background="@drawable/home"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>